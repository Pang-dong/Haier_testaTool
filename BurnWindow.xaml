<Window x:Class="Haier_E246_TestTool.BurnWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Haier_E246_TestTool.ViewModels"
        mc:Ignorable="d"
        Title="Haier_E246_TestTool_V1.0" Height="700" Width="850"
        Background="#F5F5F5">

    <Window.DataContext>
        <vm:BurnViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <DropShadowEffect x:Key="DropShadowEffect" Color="Black" Direction="315" ShadowDepth="5" Opacity="0.3" BlurRadius="10"/>
    </Window.Resources>
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <GroupBox Header="串口与工具设置" Padding="10" Background="White">
                <StackPanel>
                    <TextBlock Text="端口 (Port):" Margin="0,5,0,2"/>
                    <TextBox Text="{Binding PortNumber}" Padding="3"/>

                    <TextBlock Text="波特率 (Baud):" Margin="0,10,0,2"/>
                    <TextBox Text="{Binding BaudRate}" Padding="3"/>

                    <TextBlock Text="Loader工具路径:" Margin="0,10,0,2"/>
                    <TextBox Text="{Binding BkLoaderPath}" Padding="3" TextWrapping="Wrap"/>

                    <TextBlock Text="SN号:" Margin="0,10,0,2"/>
                    <TextBox Text="{Binding SN}" Padding="3" TextWrapping="Wrap"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="文件夹路径" Margin="0,15,0,0" Padding="10" Background="White">
                <StackPanel>
                    <TextBlock Text="待烧录 (Source):" FontWeight="Bold" Foreground="#555"/>
                    <TextBox Text="{Binding SourceDir}" IsReadOnly="True" Background="#EEE" BorderThickness="0" Padding="3" TextWrapping="Wrap"/>

                    <TextBlock Text="已完成 (Target):" Margin="0,10,0,0" FontWeight="Bold" Foreground="#555"/>
                    <TextBox Text="{Binding TargetDir}" IsReadOnly="True" Background="#EEE" BorderThickness="0" Padding="3" TextWrapping="Wrap"/>
                </StackPanel>
            </GroupBox>

            <StackPanel Margin="0,20,0,0">
                <TextBlock Text="当前文件:" Foreground="Gray"/>
                <TextBlock Text="{Binding CurrentFileName}" FontWeight="Bold" Foreground="Blue" TextWrapping="Wrap" Margin="0,0,0,10"/>

                <Button Content="开始烧录 (Start)" 
                        Command="{Binding StartBurnCommand}"
                        IsEnabled="{Binding CanStart}"
                        Height="50" FontSize="16" FontWeight="Bold"
                        Background="#2196F3" Foreground="White"/>

                <Button Content="失败重试 (Retry)" 
                        Command="{Binding RetryBurnCommand}"
                        IsEnabled="{Binding CanRetry}"
                        Visibility="{Binding CanRetry, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Margin="0,10,0,0" Height="35" 
                        Background="#FF9800" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Margin="0,0,0,15" CornerRadius="8" Background="White" Effect="{StaticResource DropShadowEffect}">
                <Border Background="{Binding StatusColor}" CornerRadius="8" Margin="5">
                    <Grid>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding StatusText}" 
                                       FontSize="60" FontWeight="Bold" Foreground="White" 
                                       HorizontalAlignment="Center"/>

                            <TextBlock Text="{Binding CurrentFileName}" 
                                       Foreground="White" Opacity="0.8" FontSize="14" 
                                       HorizontalAlignment="Center" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Border>
            <GroupBox Grid.Row="1" Header="控制台输出 (Console Log)">
                 <ListBox   ItemsSource="{Binding Logs}" 
                            Background="Black" 
                            FontFamily="Consolas" FontSize="16"
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                            HorizontalContentAlignment="Stretch"
                            x:Name="ConsoleLogList">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Text}" Foreground="{Binding Color}" TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                </ListBox>
            </GroupBox>
        </Grid>
    </Grid>
</Window>