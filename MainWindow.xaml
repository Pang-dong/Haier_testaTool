<Window x:Class="Haier_E246_TestTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lh="clr-namespace:Haier_E246_TestTool.LH"
        mc:Ignorable="d"
        Title="工厂产品自动化测试工具 V1.0" Height="600" Width="900">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" CornerRadius="5" Padding="10" Margin="0,0,5,0">
            <StackPanel>
                <TextBlock Text="串口设置" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>

                <TextBlock Text="端口号:" Margin="0,5"/>
                <ComboBox ItemsSource="{Binding ComPorts}" 
                          SelectedItem="{Binding SelectedPort}" 
                          IsEnabled="{Binding IsConnected, Converter={StaticResource InverseBoolConverter}}"/>
                <TextBlock Text="波特率:" Margin="0,10,0,5"/>
                <TextBox Text="{Binding BaudRate}" 
                         IsEnabled="{Binding IsConnected, Converter={StaticResource InverseBoolConverter}}"/>

                <Button Content="刷新串口" Command="{Binding RefreshPortsCommand}" Margin="0,10,0,0"/>

                <ToggleButton IsChecked="{Binding IsConnected}" 
                              Content="{Binding IsConnected, Converter={StaticResource ConnectBtnTextConverter}}"
                              Command="{Binding ToggleConnectionCommand}"
                              Height="40" Margin="0,20,0,0" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Background="White" CornerRadius="5" Padding="10" Margin="5,0">
            <StackPanel>
                <TextBlock Text="测试命令" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>

                <Button Content="握手检测" Command="{Binding SendCommandCommand}" CommandParameter="Cmd1" Margin="0,5" Height="35"/>
                <Button Content="读取ID"   Command="{Binding SendCommandCommand}" CommandParameter="Cmd2" Margin="0,5" Height="35"/>
                <Button Content="功能测试" Command="{Binding SendCommandCommand}" CommandParameter="Cmd3" Margin="0,5" Height="35"/>
                <Button Content="设备复位" Command="{Binding SendCommandCommand}" CommandParameter="Cmd4" Margin="0,5" Height="35"/>

                <Separator Margin="0,20"/>
                <Button Content="清空日志" Command="{Binding ClearLogCommand}" Background="#FFDDDD"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="2" Background="White" CornerRadius="5" Padding="10" Margin="5,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="运行日志" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                <ListBox Grid.Row="1" ItemsSource="{Binding UiLogs}" 
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         FontFamily="Consolas" FontSize="12">
                </ListBox>
            </Grid>
        </Border>
    </Grid>
</Window>