<Window x:Class="Haier_E246_TestTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Haier_E246_TestTool.ViewModels"
        mc:Ignorable="d"
        Title="工厂产品自动化测试工具 V1.0" Height="600" Width="900"
        Background="#F0F0F0">

    <d:Window.DataContext>
        <vm:MainViewModel/>
    </d:Window.DataContext>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" CornerRadius="5" Padding="10" Margin="0,0,5,0">

            <StackPanel>
                <TextBlock Text="串口设置" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>

                <TextBlock Text="端口号:" Margin="0,5"/>
                <ComboBox ItemsSource="{Binding ComPorts}" 
                          SelectedItem="{Binding SelectedPort}" 
                          IsEnabled="{Binding IsConnected, Converter={StaticResource InverseBoolConverter}}"/>

                <TextBlock Text="波特率:" Margin="0,10,0,5"/>
                <TextBox Text="{Binding BaudRate}" 
                         IsEnabled="{Binding IsConnected, Converter={StaticResource InverseBoolConverter}}"/>

                <Button Content="刷新串口" Command="{Binding RefreshPortsCommand}" Margin="0,10,0,0"/>

                <Button Content="{Binding IsConnected, Converter={StaticResource ConnectBtnTextConverter}}"
                        Command="{Binding ToggleConnectionCommand}"
                        Height="40" Margin="0,20,0,0" FontWeight="Bold"/>

                <GroupBox Header="设备信息" Margin="0,20,0,0" Padding="5">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="WIFI版本：" Width="60" HorizontalContentAlignment="Right"/>
                            <TextBox Text="{Binding WiFiVersion}" Width="180" IsReadOnly="True" VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <Label Content="MAC：" Width="60" HorizontalContentAlignment="Right"/>
                            <TextBox Text="{Binding DeviceMac}" Width="180" IsReadOnly="True" VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="Camera版本：" Width="60" HorizontalContentAlignment="Right" FontSize="9 "/>
                            <TextBox Text="{Binding CameraVersion}" Width="180" IsReadOnly="True" VerticalContentAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="视频播放设置" Margin="0,10,0,0" Padding="5">
                    <StackPanel>
                        <TextBlock Text="VLC 播放器路径:" Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0" Text="{Binding VlcPath}" VerticalContentAlignment="Center" ToolTip="{Binding VlcPath}"/>

                            <Button Grid.Column="1" Content="..." Command="{Binding SelectVlcPathCommand}" Width="30" Margin="5,0,0,0" ToolTip="浏览选择 vlc.exe"/>
                        </Grid>

                    </StackPanel>
                </GroupBox>

                <Button Content="自动测试 (Auto Test)" 
                        Command="{Binding StartAutoTestCommand}"
                        IsEnabled="{Binding IsConnected}"
                        Height="50" Margin="0,20,0,0" 
                        Background="#E1F5FE" FontWeight="Bold" FontSize="14"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Background="White" CornerRadius="5" Padding="10" Margin="5,0">
            <StackPanel>
                <TextBlock Text="测试命令" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>

                <ItemsControl ItemsSource="{Binding TestCommands}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Name}" 
                    Margin="0,5" 
                    Height="35"
                    Background="{Binding Background}"
                    IsEnabled="{Binding DataContext.IsNotAutoTesting, RelativeSource={RelativeSource AncestorType=Window}}">

                                <Button.Command>
                                    <Binding Path="DataContext.ExecuteTestCommandCommand" 
                             RelativeSource="{RelativeSource AncestorType=Window}"/>
                                </Button.Command>

                                <Button.CommandParameter>
                                    <Binding Path="."/>
                                </Button.CommandParameter>

                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Separator Margin="0,20"/>
                <Button Content="清空日志" Command="{Binding ClearLogCommand}" Background="#FFDDDD"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="2" Background="White" CornerRadius="5" Padding="10" Margin="5,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="运行日志" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                <ListBox x:Name="LogListBox" 
                         Grid.Row="1" 
                         ItemsSource="{Binding UiLogs}" 
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         FontFamily="Consolas" FontSize="12">
                </ListBox>
            </Grid>
        </Border>
    </Grid>
</Window>